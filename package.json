{
  "name": "sparta-matching",
  "version": "0.1.0",
  "description": "Matching algorithms for stable marriage, hospital-resident, stable roommates, and student allocation problems",
  "keywords": [
    "matching",
    "stable-marriage",
    "gale-shapley",
    "hospital-resident",
    "stable-roommates",
    "irving",
    "student-allocation",
    "algorithm"
  ],
  "license": "MIT",
  "author": "Hyeongjun Kang <hj.kang@teamsparta.co>",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TeamSparta-Inc/sparta-matching.git"
  },
  "homepage": "https://github.com/TeamSparta-Inc/sparta-matching",
  "bugs": {
    "url": "https://github.com/TeamSparta-Inc/sparta-matching/issues"
  }
}
